{
  "name": "chat-telegram",
  "description": "Telegram bot",
  "version": "0.0.1",
  "main": "dist",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/tslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "./node_modules/.bin/tslint -c ./tslint.json -p ./",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "rimraf": "^2.6.3",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  }
}
